@{
    ViewData["Title"] = "Desk Staff";
}
<div class="text-center">
    <h1 class="text-danger">@ViewData["Title"]</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm">
            <div class="dropdown show">
                <a  class="btn btn-success dropdown-toggle btn-lg btn-block active" href="#" role="button"
                    id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"aria-pressed="true">
                    Register
                </a>

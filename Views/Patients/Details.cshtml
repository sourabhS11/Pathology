@model Pathology.Models.Patient

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Patient Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientName)
        </dd>
        <dt class="col-sm-2">
            Patient Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientEmail)
        </dd>
        <dt class = "col-sm-2">
            Patient Aadhar ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientAadharID)
        </dd>
        <dt class="col-sm-2">
            Patient Health Issues
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientHealthIssues)
        </dd>
        <dt class = "col-sm-2">
            Date Of Birth
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PatientID" class="btn btn-primary">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

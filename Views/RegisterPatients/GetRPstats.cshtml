@model List<Pathology.Models.RegisterPatient>
@{
    ViewData["Title"] = "GetRPstats";
}
<div class="text-center">
    <h1>Registered Patient Statistics</h1>
</div>
<br />
<br />
<form asp-controller="RegisterPatients" asp-action="GetRPStats" method="get">
    <div class="row justify-content-center">
        <div class="input-group col-md-4">
            <input type="date" class="form-control" name="dateTime1" />

            <input type="date" class="form-control" name="dateTime2" />
        </div>
        <div>
            <button type="submit" class="btn btn-dark">Find</button>
        </div>
    </div>
</form>
<br />
<br />
<br />
@if (Model != null)
{
    @if (Model.Count == 0)
    {
        <table class="table" align="center">
            <thead>
                <tr>
                    <td align="center">
                        No Match Found
                    </td>
                </tr>
            </thead>
        </table>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Patient ID
                    </th>
                    <th>
                        Package ID
                    </th>
                    <th>
                        Test ID
                    </th>
                    <th>
                        TotalAmount
                    </th>
                    <th>
                        Payment
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TestId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PackageID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalAmount)
                        </td>
                        <td>
                            @{
                                if (item.IsPaymentDone)
                                {
                                    <a>Payment Done</a>
                                }
                                else
                                {
                                    <a>Payment Not Done</a>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
<div class="text-center">
    @{
        if (User.IsInRole("Associated Doctor"))
        {
            <a asp-controller="Account" asp-action="DashAD">Back to Dashboard</a>
        }
        else if (User.IsInRole("Lab Assistant"))
        {
            <a asp-controller="Account" asp-action="DashLA">Back to Dashboard</a>
        }
        else if (User.IsInRole("Desk Staff"))
        {
            <a asp-controller="Account" asp-action="DashDS">Back to Dashboard</a>
        }
    }
</div>
